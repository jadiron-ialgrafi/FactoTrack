<div class="email-right-box ml-0 ml-sm-4 ml-sm-0">
    <div role="toolbar" class="toolbar ml-4 ml-sm-0">
        <div class="btn-group mb-4">
            <span class="btn btn-dark ml-3">
                <input type="checkbox">
            </span>
            <button class="btn btn-dark" type="button"><i class="ti-reload"></i></button>
        </div>
        <div class="btn-group mb-4">
            <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown">
                More <span class="caret"></span>
            </button>
            <div class="dropdown-menu">
                {% for action in dropdownActions %}
                <a href="{{ action.url }}" class="dropdown-item">{{ action.label }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="email-list mt-4">
        {% for message in messages %}
        <div class="message {% if message.unread %}unread{% endif %}">
            <div>
                <div class="d-flex message-single">
                    <div class="custom-control custom-checkbox pl-4">
                        <input type="checkbox">
                    </div>
                    <div class="ml-2">
                        <button class="border-0 bg-transparent align-middle p-0">
                            <i class="fa fa-star{% if not message.starred %}-o{% endif %}" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
                <a href="{{ message.url }}" class="col-mail col-mail-2">
                    <div class="subject">{{ message.subject }}</div>
                    <div class="date">{{ message.date }}</div>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="row mt-4 m-4 mx-sm-4">
        <div class="col-7">
            <div class="text-left">{{ paginationSummary }}</div>
        </div>
        <div class="col-5">
            <div class="btn-group float-right">
                <button class="btn btn-dark" type="button"><i class="fa fa-angle-left"></i></button>
                <button class="btn btn-dark" type="button"><i class="fa fa-angle-right"></i></button>
            </div>
        </div>
    </div>
</div>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                {% include 'partials/chartjss/chartjs-bar.twig' with {
                    chart: {
                        title: 'Basic Bar Chart',
                        id: 'barChart_1'
                    }
                } %}
            </div>
            <div class="col-lg-6">
                {% include 'partials/chartjss/chartjs-line.twig' with {
                    chart: {
                        title: 'Basic Line Chart',
                        id: 'lineChart_1'
                    }
                } %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {% include 'partials/chartjss/chartjs-area.twig' with {
                    chart: {
                        title: 'Gradient Area Chart',
                        id: 'areaChart_2'
                    }
                } %}
            </div>
            <div class="col-lg-6">
                {% include 'partials/chartjss/chartjs-radar.twig' with {
                    chart: {
                        title: 'Radar Chart',
                        id: 'radar_chart'
                    }
                } %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {% include 'partials/chartjss/chartjs-pie.twig' with {
                    chart: {
                        title: 'Pie Chart',
                        id: 'pie_chart'
                    }
                } %}
            </div>
            <div class="col-lg-6">
                {% include 'partials/chartjss/chartjs-doughnut.twig' with {
                    chart: {
                        title: 'Doughnut Chart',
                        id: 'doughnut_chart'
                    }
                } %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {% include 'partials/chartjss/chartjs-polar.twig' with {
                    chart: {
                        title: 'Polar Chart',
                        id: 'polar_chart'
                    }
                } %}
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Example initialization for charts
        const barChart = new Chart(document.getElementById('barChart_1').getContext('2d'), {
            type: 'bar',
            data: {
                labels: ['January', 'February', 'March'],
                datasets: [{
                    label: 'Sales',
                    data: [12, 19, 3],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
            }
        });

        // Similarly, initialize other charts (lineChart_1, pie_chart, etc.)
    </script>
</body>
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>{{ title }}</h4>
                    <span class="ml-1">{{ subtitle }}</span>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    {% for crumb in breadcrumbs %}
                        <li class="breadcrumb-item {% if loop.last %}active{% endif %}">
                            <a href="{{ crumb.link }}">{{ crumb.label }}</a>
                        </li>
                    {% endfor %}
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Label</h4>
                    </div>
                    <div class="card-body">
                        <!-- Regular Labels -->
                        <div class="bootstrap-label">
                            {% include 'partials/label-primary.twig' with { text: 'Primary', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-secondary.twig' with { text: 'Secondary', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-success.twig' with { text: 'Success', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-danger.twig' with { text: 'Danger', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-warning.twig' with { text: 'Warning', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-info.twig' with { text: 'Info', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-light.twig' with { text: 'Light', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-dark.twig' with { text: 'Dark', classes: 'mb-2 mb-xl-0' } %}
                        </div>

                        <!-- Pill Labels -->
                        <div class="bootstrap-label mt-4">
                            {% include 'partials/label-pill-primary.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-pill-secondary.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-pill-success.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-pill-danger.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-pill-warning.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-pill-info.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-pill-light.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                            {% include 'partials/label-pill-dark.twig' with { text: 'Pill Label', classes: 'mb-2 mb-xl-0' } %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

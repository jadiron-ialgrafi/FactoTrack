<div class="email-right-box ml-0 ml-sm-4 ml-sm-0">
    <div class="toolbar" role="toolbar">
        <div class="btn-group mb-4">
            <button type="button" class="btn btn-dark"><i class="fa fa-archive"></i></button>
            <button type="button" class="btn btn-dark"><i class="fa fa-exclamation-circle"></i></button>
            <button type="button" class="btn btn-dark"><i class="fa fa-trash"></i></button>
        </div>
        <div class="btn-group mb-4">
            <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown"><i class="fa fa-folder"></i> <b class="caret m-l-5"></b></button>
            <div class="dropdown-menu">
                {% for folder in folders %}
                <a href="{{ folder.url }}" class="dropdown-item">{{ folder.label }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="btn-group mb-4">
            <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown"><i class="fa fa-tag"></i> <b class="caret m-l-5"></b></button>
            <div class="dropdown-menu">
                {% for tag in tags %}
                <a href="{{ tag.url }}" class="dropdown-item">{{ tag.label }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="btn-group mb-4">
            <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown">More <span class="caret m-l-5"></span></button>
            <div class="dropdown-menu">
                {% for action in actions %}
                <a href="{{ action.url }}" class="dropdown-item">{{ action.label }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="read-content">
        <div class="media pt-3">
            <img class="mr-4 rounded-circle" alt="image" src="{{ senderImage }}">
            <div class="media-body">
                <h5 class="text-primary">{{ senderName }}</h5>
                <p class="mb-0">{{ emailDate }}</p>
            </div>
            <a href="javascript:void()" class="text-muted"><i class="fa fa-reply"></i></a>
            <a href="javascript:void()" class="text-muted ml-3"><i class="fa fa-long-arrow-right"></i></a>
            <a href="javascript:void()" class="text-muted ml-3"><i class="fa fa-trash"></i></a>
        </div>
        <hr>
        <div class="media mb-4 mt-5">
            <div class="media-body"><span class="pull-right">{{ emailTime }}</span>
                <h5 class="my-1 text-primary">{{ emailSubject }}</h5>
                <p class="read-content-email">To: {{ recipient }}</p>
            </div>
        </div>
        <div class="read-content-body">
            {{ emailBody }}
        </div>
        <div class="read-content-attachment">
            <h6><i class="fa fa-download mb-2"></i> Attachments <span>({{ attachments|length }})</span></h6>
            <div class="row attachment">
                {% for attachment in attachments %}
                <div class="col-auto">
                    <a href="{{ attachment.url }}" class="text-muted">{{ attachment.name }}</a>
                </div>
                {% endfor %}
            </div>
        </div>
        <hr>
        <div class="form-group pt-3">
            <textarea class="w-100" name="write-email" id="write-email" cols="30" rows="5" placeholder="Your reply..."></textarea>
        </div>
        <div class="text-right">
            <button class="btn btn-primary btn-sl-sm mb-5" type="button">Send</button>
        </div>
    </div>
</div>